        //更新巡更人员缓存表
        private DataTable Reflashtemp(DateTime date1, DateTime date2,string name)
        {
            string sql = "SELECT [DT] as [时间],[DeviceID],[Person] as [巡更人员] FROM tblXGData  WHERE  [Person] ='" + name + "'and [DT]>='" + date1 + "' and [DT]<'" + date2 + "'   order by [DT]";
